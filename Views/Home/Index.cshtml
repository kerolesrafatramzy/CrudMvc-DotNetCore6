@model IEnumerable<Post>

@{
    ViewData["Title"] = "Blog";
}


<div class="container">
    <div class="row mt-lg-5">

        <div class="col-8">
            @if (!Model.Any())
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-megaphone pe-2"></i> No Records Found!
                </div>
            }
            else
            {
                @foreach (var post in Model)
                {
     



                    <div class="card mb-3">
                        <div class="row">
                            <div class="col-md-4 custom-image">
                                <img src="data:image\/*;base64,@(Convert.ToBase64String(post.Image))" class="card-img-top img-thumbnail" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div class="mb-3">
                                        <h5 class="card-title mb-4">@post.Title</h5>
                                        <p class="card-text">@(post.Content.Length > 100 ? $"{post.Content.Substring(0, 100)}..." : post.Content)</p>
                                    </div>
                                    <hr />
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text mb-0 mt-1">
                                            <i class="bi bi-clock-fill text-muted small"></i>
                                            <small class="pe-2">@post.Published_In</small>
                                         |  <i class="bi bi-star-fill text-warning ps-2"></i>
                                            <small class="text-muted">@post.Rate.ToString("0.0")</small>
                                        </p>
                                        <p class="card-text mb-0">
                                          
                                            <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-outline-secondary">
                                                <i class="bi bi-book-fill"></i>
                                                Read more
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                }
            }
        </div>

        <div class="col-4">
            <ul class="list-group list-group-flush">

                @*@foreach (var cat in Model)
                {
                    <li href="#" class="list-group-item">@cat.Category.Name</li>
                }*@


            </ul>
        </div>

    </div>
</div>


