@model Post

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-center">

    <div class="col-8">
        <div class="card mb-3 custom-image2">
            <img src="data:image\/*;base64,@(Convert.ToBase64String(Model.Image))" class="card-img-top" alt="@Model.Title">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text mt-4">@Model.Content</p>
                <hr />
                <p class="card-text mb-0 mt-1 me-4 text-end">
                    <i class="bi bi-clock-fill text-muted small"></i>
                    <small class="pe-2">@Model.Published_In</small>
                    |  <i class="bi bi-star-fill text-warning ps-2"></i>
                    <small class="text-muted">@Model.Rate.ToString("0.0")</small>
                </p>
            </div>
        </div>
    </div>

</div>